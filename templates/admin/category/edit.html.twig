{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Edit Category{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            {% include 'admin/_embed/_card/_breadcrumbs.html.twig' with {
                'sectionTitle': 'Category',
                'listActionUrl' : path('admin_category_list'),
                'addActionUrl' : path('admin_category_add'),
                'entity' : category
            } %}
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.title) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.title) }}
                    <div class="form-error">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
            </div>

            <hr/>

            {% include 'admin/_embed/_card/_form_buttons.html.twig' with {
                'listActionUrl' : path('admin_category_list'),
                'modifyActionUrl' : category and category.id ? path('admin_category_edit', {'id': category.id}) : path('admin_category_add'),
                'entity' : category
            } %}

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

    {% if category and category.id %}
        {% include 'admin/_embed/_card/_modal_delete.html.twig' with {
            'itemName': 'Category',
            'deleteActionUrl' : path('admin_category_delete', {'id': category.id})
        } %}
    {% endif %}


{% endblock %}
