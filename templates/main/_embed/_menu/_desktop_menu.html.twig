<div class="container-fluid">
    <button class="mobile-menu-toggler" id="mobile_menu_toggler">
        <i class="fas fa-bars"></i>
    </button>

    <a href="/" class="logotype">
        <img src="{{ asset('/images/icons/logo_366x79.svg') }}" alt="RankedChoice Logotype">
    </a>
    <nav class="main-nav">
        <ul class="menu">
            {% for category in app.session.get('session_categories') %}
                <li class="menu-item">
                    <a href="{{ path('main_category_show', {
                        'slug': category.slug
                    }) }}">
                        <div>{{ category.title }}</div>
                    </a>
                </li>
            {% endfor %}

            <li class="menu-item font-weight-bold">
                <a href="{{ path('main_login') }}">
                    <div>Login</div>
                </a>
            </li>
            <li class="menu-item font-weight-bold">
                <a href="#">
                    <div>Cart</div>
                </a>
            </li>
        </ul>
    </nav>
</div>